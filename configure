#!/usr/bin/env bash

STORAGE_DIR=$PWD

ln -sf "$STORAGE_DIR/.shrc" "$HOME/.shrc"
ln -sf "$STORAGE_DIR/.bashrc" "$HOME/.bashrc"
ln -sf "$STORAGE_DIR/.zshrc" "$HOME/.zshrc"
ln -sf "$STORAGE_DIR/.gitconfig" "$HOME/.gitconfig"
ln -sf "$STORAGE_DIR/.vimrc" "$HOME/.vimrc"

if [ -z "$OS" ]; then
    # Linux
    ln -sf "$STORAGE_DIR/vscode/settings.json" "$HOME/.config/Code/User/settings.json"
    ln -sf "$STORAGE_DIR/vscode/snippets" "$HOME/.config/Code/User/snippets"
else
    # Windows
    rm -rf "$HOME/AppData\Roaming\Code\User\snippets"
    
    ln -sf "$STORAGE_DIR/vscode/settings.json" "$HOME/AppData\Roaming\Code\User\settings.json"
    ln -sf "$STORAGE_DIR/vscode/snippets" "$HOME/AppData\Roaming\Code\User\snippets"
fi



# Undiscovered why $STORAGE_DIR/vscode/snippets/snippets is created.
# rm -f "$STORAGE_DIR/vscode/snippets/snippets"
